@model LitList.Pages_Users.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this profile?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.DateJoined)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.DateJoined)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Bio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserBooks)
        </dt>
        <dd>
            @foreach (var book in Model.User.UserBooks!)
                {
                    @book.Book.Title <br />
                }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="User.UserID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
