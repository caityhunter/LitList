@page
@model LitList.Pages_Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Profile</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.UserID" />
            <div class="form-group">
                
                <label asp-for="User.Name" class="control-label"></label>
                <input asp-for="User.Name" class="form-control" />
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="User.DateJoined" class="control-label"></label>
                <input asp-for="User.DateJoined" class="form-control" />
                <span asp-validation-for="User.DateJoined" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="User.Bio" class="control-label"></label>
                <input asp-for="User.Bio" class="form-control" />
                <span asp-validation-for="User.Bio" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
